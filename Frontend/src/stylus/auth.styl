#container {
  //background: rgb(29, 29, 101);
  //background: linear-gradient(90deg, rgba(29, 29, 101, 1) 0%, rgba(127, 37, 112, 1) 72%, rgba(197, 64, 105, 1) 100%);
  background-image: url("./img/Starbase_Press_Image.jpg");
  background-position: center center;
  background-size: cover;
  height: 100vh;
  width: 100%;
  margin: 0 0 0 0;
  display: block;
  overflow: hidden;
}

#login-box {
  //width: 35vw;
  //height: 60vh;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(72, 69, 84, 0.9);
  text-align: center;
  padding: 20px;
}

#login-box > * {
  background: none;
  padding: 30px;
}

#form {
  align-self: center;
  width: 25vw;
}

.mdl-card {
  background: white !important;
}

.color-heading {
  color: #8fd0fb;
}

input {
  border: 0 none;
}

input:focus {
  border: 0 none;
  outline: none;
}

.inputIcon {
  width: 17px;
  height: 19px;
  float: left;
  margin: 3px;
  margin-top: 0.6em;
}

.inputContainer {
  border-bottom: 1px solid white;
}

.inputContainer:focus-within {
  border-bottom: 1px solid #917FFB;
}

#emailInput > .inputIcon {
  -webkit-mask-image: url('svg/envelope.svg');
  mask-image: url('svg/envelope.svg');
}

#passwordContainer > .inputIcon {
  -webkit-mask-image: url('svg/lock.svg');
  mask-image: url('svg/lock.svg');
}

::placeholder {
  color: lightgrey;
}

#copyright {
  position: absolute;
  bottom: 0;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 10pt;
  color: lightgrey;
}