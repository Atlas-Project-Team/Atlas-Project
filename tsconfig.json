{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "components/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types"
    ]
  }
}